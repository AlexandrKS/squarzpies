                    <RadioButton
                        android:id="@+id/gilbertSa_9_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gilbert Farmers Market on Sat 9am-1pm" />

                    <RadioButton
                        android:id="@+id/centralSa_9_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Central Farmers Market on Sat 9am-2pm" />

                    <RadioButton
                        android:id="@+id/scottsdaleSa_8_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Old Town Scottsdale on Sat 8am-1pm" />

                    <RadioButton
                        android:id="@+id/apo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APO in Tucson" />
                </RadioGroup>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/special"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Special Instructions" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/specialET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Anything special we should know?"
                        android:inputType="textCapSentences|textMultiLine" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/dailyDeal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Daily Deal Coupon?" />

                    <Spinner
                        android:id="@+id/ddSpin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
