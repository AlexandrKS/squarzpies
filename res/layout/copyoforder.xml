                        android:id="@+id/potmTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Pie of the Month" />

                    <EditText
                        android:id="@+id/potmSingle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/potmDouble"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number" >
                    </EditText>
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/almostDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="You&apos;re Almost Done!"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF" />

            <TableLayout
                android:id="@+id/almostDoneTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/pickupHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Select a pickup Location *"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </TableRow>

                <RadioGroup
                    android:id="@+id/pickup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/squarzM_3_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Squarz Kitchen on Mon 3-7pm" />

                    <RadioButton
                        android:id="@+id/squarzT_3_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Squarz Kitchen on Tue 3-7pm" />

                    <RadioButton
                        android:id="@+id/squarzW_3_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Squarz Kitchen on Wed 3-7pm" />

                    <RadioButton
                        android:id="@+id/chandlerTh_3_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chandler Farmers Market on Thr 3-7pm" />

                    <RadioButton
                        android:id="@+id/roadrunnerSa_8_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
